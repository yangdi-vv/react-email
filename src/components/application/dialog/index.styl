borderStyle = 2px solid #797979

.invite-mask
  position fixed
  width 100%
  height 100%
  left 0
  top 0
  background-color rgba(0, 0, 0, 0.5)
  display grid
  place-items center

  .invite-dialog
    position relative
    padding 20px
    margin: 0 auto
    z-index: 99
    min-height: 200px
    min-width 200px
    width 25%
    background: #fff
    background-size 100% 100%
    animation slideDialog .3s
    opacity 1

    .dialog-header
      position relative
      height 80px
      box-sizing border-box
      text-align center
      &:after
        content ""
        width 60px
        height 0
        position absolute
        top 36px
        left 50%
        margin-left -30px
        border-bottom borderStyle

    .dialog-content
      margin 10px 0

    .dialog-footer
      margin 30px 0
      //.cancel
      //.confirm

    .dialog-close
      position absolute
      right 10px
      top 3px
      cursor pointer

@keyframes slideDialog
  0% {
    margin-top -220px
    opacity 0.3
  }
  95% {
    margin-top 5px
    opacity 1
  }
  100% {
    margin-top 0
  }
